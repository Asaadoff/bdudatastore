rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Konspektler - hamı oxuya bilər, login olanlar yaza bilər
    match /konspektler/{docId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (request.auth.token.email == 'bdu.datastore@gmail.com' || 
         request.auth.token.email == 'admin@bdukonspekt.az' ||
         request.auth.token.email == 'esedovumid798@gmail.com');
    }
    
    // User activities - login olanlar yaza bilər
    match /user_activities/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Auth logs
    match /auth_logs/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Settings collection - hamı oxuya bilər, admin yaza bilər
    match /settings/{docId} {
      allow read: if true;
      allow write: if request.auth != null && 
        (request.auth.token.email == 'bdu.datastore@gmail.com' || 
         request.auth.token.email == 'admin@bdukonspekt.az' ||
         request.auth.token.email == 'esedovumid798@gmail.com');
    }
  }
}